<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity"
        android:background="#bb97b1"
        >

    <LinearLayout
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:orientation="vertical"
     >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Team A"
        android:textSize="40sp"
        android:textColor="#844185"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="#751a46"
        />

        <TextView
        android:id="@+id/resultA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="0"
        android:textColorHint="#844185"
        android:textSize="40sp"
        android:textColor="#844185"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/background"
        />

        <Button
        android:id="@+id/increeThreeA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="+3"
        android:textSize="40sp"
        android:textColor="#844185"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/background"
        />

        <Button
        android:id="@+id/increeTwoA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="+2"
        android:textSize="40sp"
        android:textColor="#844185"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/background"
        />

        <Button
        android:id="@+id/increeOneA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="+1"
        android:textSize="40sp"
        android:textColor="#844185"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/background"
        />

        <ImageView
        android:id="@+id/resetA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_return"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/background"
        />

    </LinearLayout>

    <View
    android:layout_width="5dp"
    android:layout_height="match_parent"
    android:background="#62345c"
    android:layout_margin="5dp"
    />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Team B"
                android:textSize="40sp"
                android:textColor="#844185"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="#751a46"
        />
        <TextView
                android:id="@+id/resultB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="0"
                android:textColorHint="#844185"
                android:textSize="40sp"
                android:textColor="#844185"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/background"
        />

        <Button
                android:id="@+id/increeThreeB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+3"
                android:textSize="40sp"
                android:textColor="#844185"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/background"
        />

        <Button
                android:id="@+id/increeTwoB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+2"
                android:textSize="40sp"
                android:textColor="#844185"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/background"
        />

        <Button
                android:id="@+id/increeOneB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+1"
                android:textSize="40sp"
                android:textColor="#844185"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/background"
        />

        <ImageView
                android:id="@+id/resetB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_return"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/background"
        />

    </LinearLayout>

</LinearLayout>